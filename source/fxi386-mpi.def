####            Mac and  g95:
FC = mpif90
F90C = $(FC)
FORM =  -cpp -ffixed-line-length-132 -DMPI
PARALLEL = frxx45
BINSI = frxx4.$(O) frxx7a.$(O)
BINS = frxx0.$(O) $(BINSI)


#### Without nag library:
#
NAG = nagstub.$(O)

#### With blas library
BLAS = lapack.$(O) 
#LBLAS = -llapack -lblas

FFLAGS = -O2
# FFLAGS = -g
FFLAGS1 = -O1
LFLAGS = -DMPI -lpthread

O = o
E =
FGO = $(F90C) $(FORM) $(FFLAGS) -o fr2nl
LINK = $(F90C) $(FFLAGS) -o frescom $(OBJ) $(LIBS) $(LFLAGS) $(LBLAS)
LINKS = $(F90C) $(FFLAGS) -o sfrescom $(OBJSRCH) $(LIBS) $(LFLAGS) $(LBLAS)
# INST = install sfrescom frescom $(FRESCOXLIB)
INST = cp  sfrescom frescom fr2nl $(HOME)/binw/x86_64 ; chmod a+rx $(HOME)/binw/x86_64/frescom $(HOME)/binw/x86_64/sfrescom 
RM = rm -f
