####            Linux and  pgf90 for AMD 64-bit:
FC = mpipgf90
F90C = $(FC)
#FPP = pgcpp1 -CC
FORM = -Mfixed -Mpreprocess -DMPI -Dcorex
PARALLEL = frxx15
BINSI = frxx4.$(O) frxx7a.$(O)
BINS = frxx0.$(O) $(BINSI)


#### Without nag library:
#
NAG = nagstub.$(O)

#### With blas library, but no nag:
#BLAS = lapack.$(O)
LBLAS = -lacml

FFLAGS = -fastsse
FFLAGS1 = -O1
#FFLAGS = -g -C
#FFLAGS1 = -g -C
LFLAGS =

O = o
E =
FGO = $(F90C) $(FORM) $(FFLAGS) -o fr2nl
LINK = $(F90C) $(FFLAGS) -o frescom $(OBJ) $(LIBS) $(LFLAGS) $(LBLAS)
LINKS = $(F90C) $(FFLAGS) -o sfrescom $(OBJSRCH) $(LIBS) $(LFLAGS) $(LBLAS)
# INST = install sfrescom frescom $(FRESCOXLIB)
INST = cp  sfrescom frescom $(FRESCOXLIB)
RM = rm -f
