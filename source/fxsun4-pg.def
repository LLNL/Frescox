####            SUN Unix f90
####		with no sun performance library
FC = f90
F90C = $(FC)
FORM = -fixed -fpp
PARALLEL = frxx15
BINSI = frxx4.$(O) frxx7a.$(O)
BINS = frxx0.$(O) $(BINSI)


#### Without nag library:
#
NAG = nagstub.$(O)

BLAS =  lapack.o 
# LBLAS =  -xlic_lib=sunperf

FFLAGS = -fast
FFLAGS1 = -O1 -dalign
LFLAGS =

# FFLAGS = -O3
# FFLAGS1 = -O1

# 		DEBUGGING OPTIONS:
##FFLAGS = -g  -dalign -fns -ftrap=%none
#FFLAGS = -g  -dalign -fns
##FFLAGS1 = -g  -dalign -fns -ftrap=%none
FFLAGS = -g  -dalign -fnonstd -C
FFLAGS1 = -g  -dalign -fnonstd -C
LFLAGS =  -g -fnonstd -C

# 		PROFILING OPTIONS:
FFLAGS = -fast -pg
FFLAGS1 = -O1 -dalign -pg
LFLAGS =  -pg
O = o
E =

FGO = $(F90C) $(FORM) $(FFLAGS) -o fr2nl
LINK = $(F90C) $(FFLAGS) -o frescox $(OBJ) $(LIBS) $(LFLAGS) $(LBLAS)
LINKS = $(F90C) $(FFLAGS) -o sfrescox $(OBJSRCH) $(LIBS) $(LFLAGS) $(LBLAS)
INST = install sfrescox frescox $(FRESCOXLIB); install fr2nl $(FRESCOXLIB)
# INST =
RM = rm -f
