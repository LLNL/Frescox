####            Linux and  pgf90:
FC = pgf90
F90C = $(FC)
FORM = -Mfixed -Mpreprocess -Dcorex
PARALLEL = frxx15
BINSI = frxx4.$(O) frxx7a.$(O)
BINS = frxx0.$(O) $(BINSI)


#### Without nag library:
#
NAG = nagstub.$(O)

#### With blas library
#BLAS = lapack.$(O) 
LBLAS = -llapack -lblas

FFLAGS = -fast -mp
# FFLAGS = -g
FFLAGS1 = -O1 -mp

O = o
E =
FGO = $(F90C) $(FORM) $(FFLAGS) -o fr2nl
LINK = $(F90C) $(FFLAGS) -o frescoo $(OBJ) $(LIBS) $(LFLAGS) $(LBLAS)
LINKS = $(F90C) $(FFLAGS) -o sfrescoo $(OBJSRCH) $(LIBS) $(LFLAGS) $(LBLAS)
# INST = install sfrescoo frescoo $(FRESCOXLIB)
INST = cp  sfrescoo frescoo fr2nl $(HOME)/binw/i686 ; chmod a+rx $(HOME)/binw/i686/frescoo $(HOME)/binw/i686/sfrescoo 
RM = rm -f
