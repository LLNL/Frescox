####            pgf90 for 64-bit, profiled:
FC = pgf90
F90C = $(FC)
FPP = pgcpp1 -CC
FORM = -Mfixed  -Mpreprocess -Mprof=func
PARALLEL = frxx15
BINSI = frxx4.$(O) frxx7a.$(O)
BINS = frxx0.$(O) $(BINSI)


#### Without nag library:
#
NAG = nagstub.$(O)

#### With blas library, but no nag:
BLAS = lapack.$(O)
LBLAS =

FFLAGS = -O2 -fastsse # -Mlarge_arrays -mcmodel=medium
FFLAGS1 = -O1 # -Mlarge_arrays -mcmodel=medium
#FFLAGS = -g -C
#FFLAGS1 = -g -C
LFLAGS = -Mprof=func

O = o
E =
FGO = $(F90C) $(FORM) $(FFLAGS) -o fr2nl
LINK = $(F90C) $(FFLAGS) -o frescox $(OBJ) $(LIBS) $(LFLAGS) $(LBLAS)
LINKS = $(F90C) $(FFLAGS) -o sfrescox $(OBJSRCH) $(LIBS) $(LFLAGS) $(LBLAS)
# INST = install sfrescox frescox $(FRESCOXLIB)
INST = cp  sfrescox frescox fr2nl $(FRESCOXLIB) ; chmod a+x $(FRESCOXLIB)/frescox $(FRESCOXLIB)/sfrescox 
RM = rm -f
