####            Linux and  Intel ifc:
#FC = ifc7
FC = ifort
F90C = $(FC)
FORM = -FI -cm -w -fpp
PARALLEL = frxx15
BINSI = frxx4.$(O) frxx7a.$(O)
BINS = frxx0.$(O) $(BINSI)


#### Without nag library:
#
NAG = nagstub.$(O)

#### Without blas library:
#BLAS = lapack.$(O) 
#LBLAS = -llapack -lblas -lg2c -lm
LBLAS = -framework vecLib

FFLAGS = -O2
FFLAGS1 = -O1 
# FFLAGS = -g -O2
# FFLAGS1 = -g -O1
LFLAGS  =  

O = o
E =
FGO = $(F90C) $(FORM) $(FFLAGS) -o fr2nl
LINK = $(F90C) $(FFLAGS) -o frescox $(OBJ) $(LIBS) $(LFLAGS) $(LBLAS)
LINKS = $(F90C) $(FFLAGS) -o sfrescox $(OBJSRCH) $(LIBS) $(LFLAGS) $(LBLAS)
# INST = install sfrescox frescox $(FRESCOXLIB)
INST = cp  sfrescox frescox fr2nl $(HOME)/binw/x86_64 ; chmod a+rx $(HOME)/binw/x86_64/frescox $(HOME)/binw/x86_64/fr2nl
RM = rm -f
