####         ia64 with linux and intel ifort and mpi
FC = mpiifort
F90C = $(FC)
#FPP = fpp -B -C -fixed -DMPI
FORM = -FI -cm -w -fpp -DMPI -Dcorex
PARALLEL = frxx45
BINSI = frxx4.$(O) frxx7a.$(O)
BINS = frxx0.$(O) $(BINSI)


#### Without nag library:
#
NAG = nagstub.$(O)

#### Without blas library:
BLAS = lapack.$(O) 
#LBLAS = -lmkl -lmkl_lapack64 -L/usr/local/intel/mkl/lib/64/

FFLAGS  = -O3 -ip -zero 
FFLAGS1 = -O0     -zero
LFLAGS  = -lmpi


O = o
E =
FGO = $(F90C) $(FORM) $(FFLAGS) -o fr2nl
LINK = $(F90C) $(FFLAGS) -o frescom $(OBJ) $(LIBS) $(LFLAGS) $(LBLAS)
LINKS = $(F90C) $(FFLAGS) -o sfrescom $(OBJSRCH) $(LIBS) $(LFLAGS) $(LBLAS)
# INST = install sfrescox frescox $(FRESCOXLIB)
INST = cp  ia64-mpi/sfrescom ia64-mpi/frescom $(HOME)/binw/ia64
RM = rm -f
